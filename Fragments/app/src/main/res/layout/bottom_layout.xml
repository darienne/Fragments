<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android=
    "http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".FragmentActivity"
    android:background="#709eed">

    <TextView
        android:id="@+id/TopFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:background="@color/colorAccent"
        android:text="@string/Top" />

    <TextView
        android:id="@+id/Middle1Fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/TopFragment"
        android:layout_below="@+id/TopFragment"
        android:layout_marginTop="27dp"
        android:background="@color/colorRed"
        android:text="@string/middle1" />

    <TextView
        android:id="@+id/Middle2Fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_align="@+id/Middle1Fragment"
        android:layout_below="@+id/Middle1Fragment"
        android:layout_marginTop="72dp"
        android:background="@color/colorYellow"
        android:text="@string/middle2" />

    <TextView
        android:id="@+id/BottomFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="75dp"
        android:background="@color/colorGreen"
        android:text="@string/Bottom" />
</RelativeLayout>
